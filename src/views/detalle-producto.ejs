<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head', {title: 'Detalle del Producto'}) -%>

<body>
    <%- include('./partials/header') -%>

    <main>
        <article class="container producto">
            <section class="slider-producto">
                <ul>
                    <li id="slide2"><img src="..\img\queso-blanco-cabral-920x920.png" alt="prod" /></li>
                    <li id="slide2"><img src="..\img\queso-blanco-danes-920x920.png" alt="prod" /></li>
                    <li id="slide1"><img src="..\img\queso-mozzarella-polpetta-920x920.png" alt="prod" /></li>
                    <li id="slide2"><img src="..\img\queso-cremoso-920x920.png" alt="prod" /></li>

                </ul>
            </section>

            <section class="detalle-producto">
                <div class="descripcion">
                    <h2><%= product.name %></h2>
                    <p>
                        <%= product.description %>
                        <br>
                        Este producto se vende
                        <% if(product.packaging=='horma' ) { %>
                            <%= 'por ' + product.packaging %>
                                <% } else { %>
                                    <%= product.packaging %>
                                        <% } %>
                    </p>
                </div>
                <div class="grupo-checkout">

                    <div>
                        <p class="precio">
                            <% if (product.discount) { %>
                                <p>
                                    <spam class="tachado">
                                        $ <%= product.price.toLocaleString(undefined,
                                            {minimumFractionDigits: 2}) %>
                                    </spam>
                                </p>
                                <p class="precio">
                                    $ <%= (product.price - (product.discount *
                                        product.price / 100)).toLocaleString(undefined,
                                        {minimumFractionDigits: 2}) %>
                                </p>
                                <% } else { %>
                                    <p class="precio">
                                        $ <%= product.price.toLocaleString(undefined,
                                            {minimumFractionDigits: 2}) %>
                                    </p>
                                    <% } %>
                        </p>
                        <input type="number" name=" " id=" " value="1" />
                        <a href="#" class="boton"> Agregar al carrito</a>
                        <a href="/productoEdicion/<%= product.id %>" class="boton admin"> Editar</a>
                        <form action="/productoDelete/<%= product.id %>?_method=DELETE" method="POST" style="display: inline-flex">
							<button type="submit" class="boton admin">Eliminar</button>
						</form>
 
                    </div>
                </div>
            </section>
        </article>
        <section class="destacados">
            <div class="container">
                <h2 class="bold">Productos En Oferta</h2>

<!-- aca va la secciond e ofertas -->
            </div>
        </section>

    </main>
    <%- include('./partials/footer') -%>
</body>

</html>