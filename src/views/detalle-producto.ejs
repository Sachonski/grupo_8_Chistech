<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/head', {title: 'Detalle del Producto'}) -%>

<body>
    <%- include('./partials/header') -%>

    <main>
        <article class="container producto">
            <section class="slider-producto">
                <ul>
                    <li id="slide2"><img src="..\img\queso-sbrinz-18-meses-920x920.png" alt="prod" /></li>
                    <li id="slide2"><img src="..\img\queso-gruyere-920x920.png" alt="prod" /></li>
                    <li id="slide1"><img src="..\img\quesos-duros.jpg" alt="prod" /></li>
                    <li id="slide2"><img src="..\img\QA-003-caja3leches-920x920.png" alt="prod" /></li>

                </ul>
            </section>

            <section class="detalle-producto">
                <div class="descripcion">
                    <h2><%= product.name %></h2>
                    <p>
                        <%= product.description %>
                        <br>
                        Este producto se vende
                        <% if(product.packaging=='horma' ) { %>
                            <%= 'por ' + product.packaging %>:
                                <% } else { %>
                                    <%= product.packaging %>
                                        <% } %>
                    </p>
                </div>
                <div class="grupo-checkout">

                    <div>
                        <p class="precio">
                            <% if (product.discount) { %>
                                <p>
                                    <spam class="tachado">
                                        $ <%= product.price.toLocaleString(undefined,
                                            {minimumFractionDigits: 2}) %>
                                    </spam>
                                </p>
                                <p class="precio">
                                    $ <%= (product.price - (product.discount *
                                        product.price / 100)).toLocaleString(undefined,
                                        {minimumFractionDigits: 2}) %>
                                </p>
                                <% } else { %>
                                    <p class="precio">
                                        $ <%= product.price.toLocaleString(undefined,
                                            {minimumFractionDigits: 2}) %>
                                    </p>
                                    <% } %>
                        </p>
                        <input type="number" name=" " id=" " value="1" />
                        <a href="#" class="boton"> Agregar al carrito</a>
                    </div>
                </div>
            </section>
        </article>
        <section class="destacados">
            <div class="container">
                <h2 class="bold">Productos En Oferta</h2>

                <div class="products">
                    <% for(product of products) { %>
                        <% if(product.discount == 25)  { %>

                    <div>
                        <div class="product">
                            <a href="/detalle-producto">
                                <div class="product-card">
                                    <div class="product-image">
                                        <img src="..\img\<%= product.image %>" alt="Queso bien rico" />
                                    </div>
                                    <div class="product-description">
                                        <h3><%= product.name %></h3>
                                        <p><%= product.package %></p>
                                    </div>
                                    <div class="product-price">
                                        <div aria-hidden="true"></div>
                                        <p>$ <%= product.price %></p>
                                    </div>
                                </div>
                            </a>
                            <div>
                                <a href="/carrito" class="boton"> Agregar al carrito</a>
                            </div>
                        </div>
                    </div>
                    <% } %>
                    <% } %>
                                                          
                </div>
            </div>
        </section>

    </main>
    <%- include('./partials/footer') -%>
</body>

</html>