<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head', {title: 'Todos los Productos' }) -%>

    <body>
        <%- include('./partials/header') -%>

            <main>

                <div class="placeholderProduct"> </div>
                <section class="destacados">
                    <%- include('./partials/category') -%>

                        <div class="linea-separadora"></div>
                        <div class="container">
                            <h2 class="bold">Productos</h2>

                            <div class="products">
                                <% for(product of products) { %>
                                    <% if(product.stock){ %>

                                        <div>
                                            <div class="product">
                                                <a href="/detalle-producto">
                                                    <div class="product-card">
                                                        <div class="product-image">
                                                            <img src="..\img\<%= product.image %>"
                                                                alt="Queso bien rico" />
                                                        </div>
                                                        <div class="product-description">
                                                            <h3>
                                                                <%= product.name %>
                                                            </h3>
                                                            <p>
                                                                <%= product.package %>
                                                            </p>
                                                        </div>
                                                        <div class="product-price">
                                                            <div aria-hidden="true"></div>
                                                            <p>$ <%= product.price %>
                                                            </p>
                                                        </div>
                                                    </div>
                                                </a>
                                                <div>
                                                    <a href="/carrito" class="boton"> Agregar al carrito</a>
                                                </div>
                                            </div>
                                        </div>
                                        <% } %>
                                            <% } %>

                            </div>
                        </div>
                </section>

            </main>
            <%- include('./partials/footer') -%>

    </body>

</html>