                            <img src="..\img\Background2.png" alt="prod" />
                        </li>

                    </ul>
                </div>

                <%- include('./partials/category') -%>
                    <div class="linea-separadora"></div>

                    <section class="destacados">
                        <div class="container">
                            <h2 class="bold">Semana super Ofertas</h2>

                            <div class="products">

                                <% for(product of products) { %>
                                    <% if(product.discount && product.stock) { %>

                                        <div>
                                            <div class="product">
                                                <a href="/detalle-producto">
                                                    <div class="product-card">
                                                        <div class="product-image">
                                                            <img src="..\img\<%= product.image %>"
                                                                alt="Queso bien rico" />
                                                        </div>
                                                        <div class="product-description">
                                                            <h3>
                                                                <%= product.name %>
                                                            </h3>
                                                            <p>
                                                                <%= product.packaging %>
                                                            </p>
                                                            <p>
                                                                <%= product.discount %>
                                                            </p>
                                                        </div>
                                                        <div class="product-price">
                                                            <div aria-hidden="true"></div>
                                                            <p>
                                                                <!-- <spam class="tachado"> -->
                                                                $ <%= product.price %>
                                                                <!-- </spam> -->
                                                            </p>
                                                        </div>
                                                    </div>
                                                </a>
                                                <div>
                                                    <a href="/carrito" class="boton"> Agregar al carrito</a>
                                                </div>
                                            </div>
                                        </div>
                                        <% } %>
                                            <% } %>

                            </div>
                        </div>
                    </section>
                    <div class="linea-separadora"></div>
                    <section class="destacados">
                        <h2>Logros Internacionales</h2>
                        <div class="container-barra-lateral">
                            <div>
                                <ul class="slider-info">
                                    <li>
                                        <i class="fas fa-award"></i>
                                        <p>Cheese Award 2019</p>
                                    </li>
                                    <li>
                                        <i class="fas fa-award"></i>
                                        <p>Farmer's Market 2021</p>
                                    </li>
                                    <li>
                                        <i class="fas fa-award"></i>
                                        <p>Cheese Euro 2017</p>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </section>
            </main>
            <%- include('./partials/footer') -%>
    </body>

</html>